<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             x:Class="HabitTracker.Presentation.MainPage"
             Padding="0"
             Title="Main"
             BackgroundColor="#FFF0DA">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="0,10,0,0"
          RowSpacing="15">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="#FF9900"
               BorderColor="Transparent"
               WidthRequest="200"
               HeightRequest="60"
               CornerRadius="20"
               Padding="12"
               HasShadow="True">
            
            <Label Text="Main"
                   TextColor="White"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Habits Vertilac Scroll -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Habits}"
                        VerticalScrollBarVisibility="Never"
                        SelectionMode="None">
            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#ACC4F3"
                           CornerRadius="15"
                           Padding="8"
                           HorizontalOptions="FillAndExpand"
                           Margin="20,0,20,0"
                           HeightRequest="70">
                        
                        <StackLayout Spacing="2">
                            <StackLayout Orientation="Horizontal" Spacing="2">
                                <!-- Icon Habit -->
                                       <Button ImageSource="bottle_icon.png"
                                        BackgroundColor="{Binding StatusColor}"
                                       CornerRadius="10"
                                       Padding="5"
                                       HeightRequest="45"
                                       HorizontalOptions="Fill"/>
                                <!-- Name Habit -->
                                <Frame BackgroundColor="{Binding StatusColor}"
                                    BorderColor="Transparent"
                                    CornerRadius="10"
                                    Padding="5"
                                    HeightRequest="45"
                                    HasShadow="True"
                                    HorizontalOptions="FillAndExpand">

                                    <Grid ColumnDefinitions="*,Auto,Auto"
                                        ColumnSpacing="10"
                                        VerticalOptions="Center">

                                        <!-- Название привычки - растягивается -->
                                        <Label Grid.Column="0"
                                            Text="{Binding Name}"
                                            TextColor="White"
                                            FontSize="18"
                                            FontAttributes="Bold"
                                            HorizontalOptions="Start"
                                            VerticalOptions="Center"
                                            LineBreakMode="TailTruncation"/>  <!-- Обрезать длинный текст -->

                                        <!-- Progress - выравнивание по правому краю -->
                                        <Label Grid.Column="1"
                                            Text="{Binding Progress}"
                                            FontSize="16"
                                            TextColor="White"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                                </StackLayout>
                                
                            <ProgressBar Progress="{Binding ProgressPercentage}"
                                       ProgressColor="{Binding StatusColor}"
                                       HeightRequest="8"
                                       IsVisible="{Binding ShowProgressBar}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add Habit Floating Button -->
        <Button Grid.Row="1"
                Text="+"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                Padding="-10"
                BackgroundColor="#FF9900"
                TextColor="White"
                FontSize="48"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,25,0"
                Command="{Binding AddPageButton.Command}">
        </Button>

        <!-- Action Buttons -->
            <Grid 
            Grid.Row="2"
            ColumnDefinitions="*,*" 
            Padding="16,8,16,8"
            BackgroundColor="{StaticResource PageFooter}"
            Margin="0">

                <Button Grid.Column="0" ImageSource="home_page_enable_icon.png" BackgroundColor="Transparent"/>
                <Button Grid.Column="1" ImageSource="stat_page_disable_icon.png" BackgroundColor="Transparent"/>
            </Grid>
    </Grid>
</ContentPage>