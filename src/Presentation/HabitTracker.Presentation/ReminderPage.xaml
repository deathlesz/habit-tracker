<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Presentation.ReminderPage"
             Title="ReminderPage">
    <VerticalStackLayout>
        <Label Text="Message"></Label>
        <Entry x:Name="MessageEntry" Placeholder="Enter notification message"></Entry>
        <Label Text="Start Date"></Label>
        <DatePicker x:Name="DatePicker"></DatePicker>
        <Label Text="Cycle Pattern Length:"></Label>
        <Entry x:Name="CyclePatternLength" Placeholder="Enter cycle length" Keyboard="Numeric"></Entry>
        <Label Text="Days to Notify (comma separated):"></Label>
        <Entry x:Name="DaysToNotify" Placeholder="e.g. 1,3,5"></Entry>
        <Label Text="Cycles to Run (optional):"></Label>
        <Entry x:Name="CyclesToRun" Placeholder="Leave empty for infinite" Keyboard="Numeric"></Entry>
        <!-- <Button Text="Create Notification" Clicked="OnCreateNotificationServiceClicked"/> -->
        <!-- <Label x:Name="ResultLabel" TextColor="Green" FontAttributes="Bold" /> -->
        <!-- <Button Text="Show Notification" Clicked="OnShowNotificationButtonClicked"/> -->
        <Label x:Name="ResultShowNotification" TextColor="Green" FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>